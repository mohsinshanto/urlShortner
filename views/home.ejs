<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>urlShortner</title>
</head>
<body>
    <% if (locals.shortId) { %>
     <h3>Your Url shortner is:http://localhost:8001/url/<%= shortId %></h3>
    <% } %>
    <h3>urlShortner Form</h3>
    <form action="/url"method="post">
        <div>
            <label>Url:</label>
        <input type="text"placeholder="Enter an actual url"name="url">
        </div><br>
        <div>
            <button type="submit">Generate</button>
        </div>

    </form>
    <% if (locals.allUrls) { %>
         <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>UrlName</th>
                    <th>shortId</th>
                    <th>totalClicks</th>
                </tr>
            </thead>
            <tbody>
                <% allUrls.forEach((url,index) => { %>
                 <tr>
                    <td><%= index+1 %></td>
                    <td><%= url.redirectUrl %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.visitHistory.length %></td>
                    
                 </tr>
                <% }) %>
            </tbody>
         </table>
        <% } %>
</body>
</html>